##############################################################################
# - load motor configuration
epicsEnvSet("DEV", "X10SA-ES1-VFM")
${SCRIPTEXEC} ${ECMC_CONFIG_ROOT}loadYamlAxis.cmd,     "FILE=cfg/ax1_TRYUW.yaml, DRV_SLAVE=015, ENC_SLAVE=005, ENC_CHANNEL=01"
