record(ao,"${P}${AXIS_NAME}-Ctrl-Kp"){
  info(asyn:READBACK,"1")
  field(DESC, "${AXIS_NAME}: Ctrl Kp")
  field(DTYP, "asynFloat64")
  field(OUT,  "@asyn($(PORT),$(ADDR),$(TIMEOUT))T_SMP_MS=$(T_SMP_MS=1000)/TYPE=asynFloat64/ax$(AXIS_NO).ctrl.kp?")
  field(SCAN, "Passive")
  field(PREC, "${PREC=5}")
  field(EGU,  "${EGU=}")
  field(TSE,  "0")
  field(VAL,  "${KP=0}")
}

