{
  pattern {CH_ID, KEY,   suffix,  sourceName,     DESC                }
          {01,    "Drv", "_Ctrl", "driveControl", "Drive Control Word"}
          {02,    "Drv", "_Ctrl", "driveControl", "Drive Control Word"}
}

